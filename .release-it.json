{
    "hooks": {},
    "git": {
      "requireCleanWorkingDir": false,
      "commit": true,
      "commitMessage": "Release ${version}",
      "tag": true,
      "tagName": "${version}",
      "tagAnnotation": "Release ${version}",
      "push": true,
      "pushArgs": "--follow-tags",
      "pushRepo": "origin"
    },
    "npm": {
      "publish": false
    },
    "github": {
      "release": false,
      "releaseName": "Release ${version}"
    },
    "plugins": {
        "@release-it/conventional-changelog": {
          "preset": "angular"
        }
      }
  }